{% block component %}
   {% if notag is not defined or not notag %}
   <div class="pure-control-group{% if element.u is defined  %}pure-u-1-{{ element.u }}{% endif %}">
   {% endif %}
   {% block label %}
      {% if element.label is defined %}
         {% set label = element.label %}
      <label for="{{ element.id|default(element.name) }}"{%if label.title is defined %} title="{{ label.title }}"{% endif %}{% if label.tip is defined or label.class is defined%} class="{% if element.tip is defined %}tooltip{% endif %} {% if label.class is defined %}{{ label.class }}{% endif %}"{% endif %}>
         {% if label is iterable %}
            {{ label.label }}
         {% else %}
            {{ label }}
         {% endif %}
         {%- if element.required is defined and element.required -%}
            (<span title="{{ __s('This element is required') }}">*</span>)
         {%- endif -%}
      </label>
      {% endif %}
   {% endblock %}
   {%if element.tip is defined %}<span class="tip">{{ element.tip }}</span>{% endif %}
   {% block element %}<input
        type="{{ element.type }}"
        name="{{ element.name }}"
        id="{{ element.id|default(element.name) }}"
        value="{% if element.value is defined %}{{ element.value }}{% endif %}"
        {%if element.required is defined and element.required == true %} required="required"{% endif %}
        {%if element.readonly is defined and element.readonly == true %} readonly="readonly"{% endif %}
        {%if element.disabled is defined and element.disabled == true %} disabled="disabled"{% endif %}
        {%if element.autofocus is defined and element.autofocus == true %} autofocus="autofocus"{% endif %}
        {%if element.title is defined %} title="{{ element.title }}"{% endif %}
        {%if element.maxlength is defined %} maxlength="{{ element.maxlength }}"{% endif %}
        {%if element.class is defined %} class="{{ element.class }}"{% endif %}
        {%if element.autocomplete is defined %} autocomplete="{{ element.autocomplete }}"{% endif %}
        {%if element.size is defined %} size="{{ element.size }}"{% endif %}
        {%if element.checked is defined and element.checked == true %} checked="checked"{% endif %}
        {%if element.placeholder is defined %} placeholder="{{ element.placeholder }}"{% endif %}
        />
   {% endblock %}
   {% block icon %}
      {% if element.icon is defined %}
      <span class="fa fa-{{ element.icon}} input-img"></span>
      {% endif %}
   {% endblock %}
   {% if element.message is defined %}
      <span class="pure-form-message-inline">{{ element.message }}</span>
   {% endif %}
   {% if notag is not defined or not notag %}
   </div>
   {% endif %}
{% endblock %}
