{% extends "glpi_page.twig" %}

{% block title %}{{ page_title }}{% endblock %}

{% block header %}
   {% set item = false %}
   {{ parent() }}
{% endblock %}

{% block content %}
   <div class="pure-g">
      <div class="pure-u-1 pure-u-lg-3-4 simpleform">
         {% include "elements/form.twig" with {'glpi_form': glpi_form} %}
      </div>
   </div>

   {% block dd_content %}
   <div class="pure-g">
      <div class="pure-u-1 pure-u-lg-3-4 dropdowns_list">
      {% for label, dp in glpi_form.elements.dropdowns.values %}
         <dl class="pure-u-1 pure-u-md-1-4">
            <dt>{{ label }}</dt>
         {% for key, value in dp %}
            {% set dd_item = getitem(key) %}
            <dd>
               <a href="{{ path_for('dropdowns', {'dropdown': key})}}">
                  <i class="fa fa-star{% if dd_item.isEntityAssign() %} wentity{% endif %}" title="{% if dd_item.isEntityAssign() %}{{ __s('Assigned to entity') }}{% else %}{{ __s('Not assigned to entity') }}{% endif %}"></i>
                  {{ value }}
               </a>
            </dd>
         {% endfor %}
         </dl>
      {% endfor %}
      </div>
   </div>
   {% endblock %}
{% endblock %}

{% block javascripts %}
   <script type="text/javascript">
      var onDdListChange = function (elt, event) {
         var _value = elt.val();
         if (_value != 0) {
            window.location.href = '{{ path_for('dropdowns', {'dropdown': 'PLACEBO'}) }}'.replace(/PLACEBO/, _value);
         } else {
            window.location.href = '{{ path_for('dropdowns') }}';
         }
      };
   </script>
   {{ parent() }}
{% endblock %}
